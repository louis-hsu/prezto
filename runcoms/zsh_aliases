# ------------------------ Functions
# Useful adb commands
# Get IMEI with parameter to identify IMEI 1 or 2
function getIMEI() {
  if [ -z "${1}" ]; then
    set "1"
  fi
  cstring="service call iphonesubinfo 3 i32 \"${1}\" | \
    command grep -oE \"[0-9a-f]{8} \" | \
    while read hex; \
    do echo -ne \"\\u\${hex:4:4}\\u\${hex:0:4}\"; \
    done; echo"
  IMEI=$(adb shell "${cstring}")
  echo -e "IMEI_${1}: ${IMEI}"
}

